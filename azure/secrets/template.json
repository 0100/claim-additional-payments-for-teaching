{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "resourceNamePrefix": {
      "type": "string",
      "defaultValue": "[resourceGroup().name]"
    },
    "keyVaultName": {
      "type": "string"
    },
    "deliveryTeamUserGroupObjectId": {
      "type": "string"
    }
  },
  "variables": {
    "deploymentUrlBase": "https://raw.githubusercontent.com/DFE-Digital/bat-platform-building-blocks/master/templates/",

    "keyVaultDeploymentName": "[concat(parameters('resourceNamePrefix'), '-key-vault')]"
  },
  "resources": [
    {
      "apiVersion": "2017-05-10",
      "name": "[variables('keyVaultDeploymentName')]",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('deploymentUrlBase'), 'keyvault.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "keyVaultName": {
            "value": "[parameters('keyVaultName')]"
          },
          "accessPolicies": {
            "value": [
              {
                "tenantId": "[subscription().tenantId]",
                "objectId": "[parameters('deliveryTeamUserGroupObjectId')]",
                "permissions": {
                  "secrets": ["get", "list", "set", "delete"]
                }
              }
            ]
          }
        }
      }
    }
  ],
  "outputs": {}
}
